{
  "version": 2,
  "builds": [
    {
      "src": "api/shorten.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.js",
      "methods": ["POST", "GET", "OPTIONS"]
    },
    {
      "src": "/api/stats",
      "dest": "/api/shorten.js",
      "methods": ["GET"]
    },
    {
      "src": "/([a-zA-Z0-9_-]{3,10})$",
      "dest": "/api/shorten.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
