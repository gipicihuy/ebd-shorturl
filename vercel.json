{
  "version": 2,
  "builds": [
    {
      "src": "api/shorten.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.js",
      "methods": ["POST"]
    },
    {
      "src": "/([a-zA-Z0-9]{6})",  // Handle short codes (6 characters)
      "dest": "/api/shorten.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
