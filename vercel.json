{
  "version": 2,
  "builds": [
    {
      "src": "api/shorten.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.js",
      "methods": ["POST"]
    },
    {
      "src": "/([a-zA-Z0-9]+)",
      "dest": "/api/shorten.js"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}
